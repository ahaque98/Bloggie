@model List<Bloggie.Web.Models.Domain.BlogPost>

@{
    ViewData["title"] = "Add Blogpost";
}

<div class="bg-secondary bg-opacity-10 py-2">
    <div class="container">
        <h1>All BlogPosts - Admin Functionality </h1>
    </div>
</div>

<div class="container py-5">
    @if (Model != null && Model.Any())
    {
        <table class="table">
            <thead>
                <tr>
                    <td>Id</td>
                    <td>Heading</td>
                    <td>Tags</td>
                    <td>Actions</td>
                </tr>
            </thead>
            <tbody>
                @foreach (var blogPost in Model)
                {
                    <tr>
                        <td>@blogPost.Id</td>
                        <td>@blogPost.Heading</td>
                        <td>
                            <div class="d-flex">
                                @foreach (var tags in blogPost.Tags)
                                {
                                    <span class="badge bg-info m-1">@tags.Name</span>
                                }
                            </div>
                        </td>
                        <td>
                            <a asp-area=""
                               asp-controller="AdminBlogPosts"
                               asp-action="Edit"
                               asp-route-id="@blogPost.Id">
                                Edit
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="alert alert-warning" role="alert">
            <h4 class="alert-heading">No Record Found!</h4>
            <p class="alert alert-danger fw-bolder">If you read this important alert message. Then add some data.</p>
            <hr>
                <p class="mb-0">Whenever you need to, be sure to call the <strong><code class="text-success fw-bolder">DbContext</code></strong> to get records from the Database</p>
        </div>
    }
</div>